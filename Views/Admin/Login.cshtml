@model OctoCodes.Models.User

@{
    ViewData["Title"] = "Přihlášení";
    Layout = "_AdminLayout";
}

<h1>Přihlášení</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" >Uživatelské jméno</label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Heslo</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="text-danger">
                @if (TempData["LoginFailed"] != null)
                {
                    <label>Chybné jméno nebo heslo</label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Přihlásit se" class="btn btn-primary" /> <br/>
            </div>
        </form>
    </div>
</div>